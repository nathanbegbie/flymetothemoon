# Hetzner Cloud API Token
# Get your token from: https://console.hetzner.cloud/projects -> Access -> API Tokens
hcloud_token = "your-hetzner-api-token-here"

# Server Configuration
server_name  = "flymetothemoon-server"
server_type  = "cax11"  # 2 vCPU ARM, 4GB RAM, 40GB disk (~â‚¬4.15/month)
location     = "fsn1"  # Falkenstein, Germany (lowest latency from Nairobi)
image        = "ubuntu-24.04"

# SSH Keys
# Option 1: Leave empty to use ~/.ssh/id_rsa.pub automatically
ssh_keys = []

# Option 2: Provide SSH key names that already exist in your Hetzner project
# ssh_keys = ["my-ssh-key"]

# Additional Options
enable_backups = false
enable_ipv6    = true
